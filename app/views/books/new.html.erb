<h1>NewPost</h1>
<!doctype html>
<html>
<head>
   <meta charset="utf-8"/>
</head>
<body>
  <div class="block">
        <%= form_with model: @book, class: :form, local: true do |form| %>
          <div class="area">
            <%= form.text_field :title, placeholder: :タイトル, class: :form__title %>
          </div>
          <div class="area">
            <%= form.text_field :author, placeholder: :著者, class: :form__title %>
          </div>
          <div class="area">
            <%= form.text_area :kill, placeholder: :文章, class: :form__titles %>
          </div>
          <div class="area">
             <div class="label">
            <%= form.label :image, class: "label_area" do %>
              <%= fa_icon 'image'%>
              <%= form.file_field :image, class: "imagearea" %>
            <% end %>  
          </div>
          <div class="area">
            <%= form.submit '投稿', class: :form__btn %>
        </div>
   </div>     
</body>
<% end %>

